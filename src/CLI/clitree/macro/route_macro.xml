<?xml version="1.0" encoding="utf-8"?>
<ROOT>
<MACRODEF name="IF_MANDATORY_RT_PREF">
    <PARAM
        name="interface"
        help="Select an interface"
        ptype="SUBCOMMAND"
        mode="subcommand"
        >
        <!--- ip route ip-prefix  interface iface_type [next-hop] [preference] -->
        <PARAM
            name="iface-name"
            help="Interface name"
            ptype="PHY_VL_PO_INTERFACE"
            yang_key="/routing/instance/static-routes/ipv4/route/next-hop/address"
            prompt_oper="${prefix}"
            prompt_str="true"
            prompt_fn="process_next_hop_addr"
            yang_name="arg1=${iface-name}"
            >
            <PARAM
               help="Set next-hop address"
               name="next-hop-address"
               ptype="IP_ADDR"
               optional="true"
               db_multi_yang_name="arg3=!0.0.0.0"
               yang_name="arg3=${next-hop-address}"
               default="0.0.0.0"
               />
           <PARAM
               name="pref"
               help="Route preference"
               ptype="RANGE_1_255"
               optional="true"
               yang_name="arg2=${pref}"
              />
        </PARAM>
    </PARAM>
</MACRODEF>
<MACRODEF name="NO_IF_MANDATORY_RT_PREF">
    <PARAM
        name="interface"
        help="Select an interface"
        ptype="SUBCOMMAND"
        mode="subcommand"
        >
        <!--- ip route ip-prefix  interface iface_type [next-hop] [preference] -->
        <PARAM
            name="iface-name"
            help="Interface name"
            ptype="PHY_VL_PO_INTERFACE"
            sub_oper_yang="remove:arg2"
            yang_name="arg3=${next-hop-address},arg1=${iface-name}"
            >
            <PARAM
               help="Set next-hop address"
               name="next-hop-address"
               ptype="IP_ADDR"
               optional="true"
               default="0.0.0.0"
               />
           <PARAM
               name="pref"
               help="Route preference"
               ptype="RANGE_1_255"
               optional="true"
              />
        </PARAM>
    </PARAM>
</MACRODEF>


