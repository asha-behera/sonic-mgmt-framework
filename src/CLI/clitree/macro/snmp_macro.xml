<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE ROOT [
<!ENTITY MODULE-NS             "http://www.dellemc.com/networking/os10/dell-snmp">
<!ENTITY MODULE                "dell-snmp">
<!ENTITY SUBTREE_FILTER        "Filter_Type:SUBTREE;">
<!ENTITY TRAP_REC_HOSTLIST     "/snmp-server/trap-recipient-host">
<!ENTITY TRAP_REC_HOST_COMMNM  "&TRAP_REC_HOSTLIST;/community-name">
<!ENTITY TRAP_REC_HOST_USMNM   "&TRAP_REC_HOSTLIST;/security-name">
<!ENTITY TRAP_REC_HOST_PORT    "&TRAP_REC_HOSTLIST;/udp-port">
]>
<ROOT>
<!-- macro for version option chosen from inside of trap or informs option-->
<MACRODEF name="SNMP_VER">
    <PARAM
        name="version"
        help="SNMP version to use for notification messages"
        ptype="SUBCOMMAND"
        optional="arg1"
        mode="subcommand"
        >
        <PARAM
            name="version-options"
            help="Select from given options"
            ptype="SUBCOMMAND"
            mode="switch"
            >
            <MACRO name="SNMP_VER_ID" arg="1,Use SNMPv1"/>
            <MACRO name="SNMP_VER_ID" arg="2c,Use SNMPv2c"/>
        </PARAM> <!-- version-options-->
    </PARAM> <!-- version -->
</MACRODEF>

<!-- macro used from traps, informs and version(1&2c) options  -->
<MACRODEF name="COMM_NM_AND_PORT">
    <PARAM
        name="commnm"
        help="arg1 (Max 20 characters)"
        ptype="STRING_20"
        yang_name="&TRAP_REC_HOST_COMMNM;=${commnm}"
        >
        <PARAM
            name="udp-port"
            help="The notification host's UDP port configuration"
            ptype="SUBCOMMAND"
            mode="subcommand"
            optional="true"
            >
            <PARAM
                name="udp_port_num"
                help="The notification host's UDP port number"
                ptype="UINT16"
                yang_name="&TRAP_REC_HOST_PORT;=${udp_port_num}"
                />
        </PARAM> <!-- udp port -->
    </PARAM> <!-- commnm -->
</MACRODEF>

<MACRODEF name="SNMP_VER_ID">
    <PARAM
        name="arg1"
        help="arg2"
        ptype="SUBCOMMAND"
        mode="subcommand"
        yang_name="&TRAP_REC_HOSTLIST;/security-model=arg1"
        >
        <MACRO name="COMM_NM_AND_PORT" arg="SNMPvarg1 community string"/>
    </PARAM>
</MACRODEF>

<!--  macro used as standalone option at host-address level-->
<MACRODEF name="COMMUNITY_NM_AND_PORT">
    <PARAM
        name="community_nm"
        help="arg1 (Max 20 characters)"
        ptype="STRING_20"
        yang_name="&TRAP_REC_HOST_COMMNM;=${community_nm}"
        db_flag="SKIP_TREE"
        >
        <PARAM
            name="udp-port"
            help="The notification host's UDP port configuration"
            ptype="SUBCOMMAND"
            mode="subcommand"
            optional="true"
            >
            <PARAM
                name="udp_port_num"
                help="The notification host's UDP port number"
                ptype="UINT16"
                yang_name="&TRAP_REC_HOST_PORT;=${udp_port_num}"
                />
</PARAM> <!-- udp port -->
</PARAM> <!-- commnm -->
</MACRODEF>

<!-- macro for version option when chosen from host-address option -->
<MACRODEF name="SNMP_VER_WO_TRAPS_INFORMS">
    <PARAM
        name="version"
        help="SNMP version to use for notification messages"
        ptype="SUBCOMMAND"
        optional="arg1"
        mode="subcommand"
        db_flag="SKIP_TREE"
        >
        <PARAM
            name="version-options"
            help="Select from given options"
            ptype="SUBCOMMAND"
            mode="switch"
            >
            <MACRO name="SNMP_VER_ID" arg="1,Use SNMPv1"/>
            <MACRO name="SNMP_VER_ID" arg="2c,Use SNMPv2c"/>
        </PARAM> <!-- version-options-->
    </PARAM> <!-- version -->
</MACRODEF>
</ROOT>
